<Window x:Class="TestLab.Windows.AppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestLab.Windows"
        mc:Ignorable="d"
        Title="TestLab" Height="450" Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="304"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Background="{StaticResource ContentText}" Orientation="Vertical">
            <StackPanel  Margin="25"  HorizontalAlignment="Center"  Orientation="Horizontal">
                <Path Fill="{StaticResource AccentColor}"  Data="{StaticResource Logo}" />
                <TextBlock Margin="20,0,10,0" Text="TestLab" VerticalAlignment="Center" FontSize="35"  Foreground="White"/>
            </StackPanel>
            <StackPanel>
                <Button  HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Height="42" Margin="15" Background="Transparent" BorderBrush="Transparent">
                    <StackPanel  Orientation="Horizontal">
                        <Path Stretch="UniformToFill"  Data="{StaticResource  Home}" Fill="{StaticResource AccentColor}"></Path>
                        <TextBlock Foreground="White" FontSize="20" VerticalAlignment="Center" Margin="15,0,0,0">
                            Профиль
                        </TextBlock>
                    </StackPanel>
                </Button>
                <Button  HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Height="42" Margin="15" Background="Transparent" BorderBrush="Transparent">
                    <StackPanel  Orientation="Horizontal">
                        <Path Stretch="UniformToFill"  Data="{StaticResource  Test}" Fill="{StaticResource AccentColor}"></Path>
                        <TextBlock Foreground="White" FontSize="20" VerticalAlignment="Center" Margin="15,0,0,0">
                            Тесты
                        </TextBlock>
                    </StackPanel>
                </Button>
                <Button  HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Height="42" Margin="15" Background="Transparent" BorderBrush="Transparent">
                    <StackPanel  Orientation="Horizontal">
                        <Path Stretch="UniformToFill"  Data="{StaticResource  Result}" Fill="{StaticResource AccentColor}"></Path>
                        <TextBlock Foreground="White" FontSize="20" VerticalAlignment="Center" Margin="15,0,0,0">
                            Результаты
                        </TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
