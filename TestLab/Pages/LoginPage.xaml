<Page x:Class="TestLab.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestLab.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="LoginPage">
    <Page.Resources>
      
        
    </Page.Resources>
    <Grid>
        <StackPanel HorizontalAlignment="Stretch" Margin="100"  VerticalAlignment="Top">
            <TextBlock Style="{StaticResource BigTextBlock}">Вход</TextBlock>
            <TextBox Style="{StaticResource SimpleTextBox}" x:Name="Login" GotFocus="TextBox_OnGotFocus" Margin="0,10,0,0" Text="Логин"></TextBox>
            <TextBox Style="{StaticResource SimpleTextBox}" x:Name="Password" GotFocus="TextBox_OnGotFocus" Margin="0,5,0,0" Text="Пароль"></TextBox>
            <Button Style="{StaticResource SimpleButton}" Click="Enter_OnClick" Margin="0,10,0,0" Content="Войти"></Button>
        </StackPanel>
    </Grid>
</Page>
